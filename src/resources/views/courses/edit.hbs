<div class="mt-4">
    <h3>Edit Course</h3>

    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" value="{{course.name}}" id="name">
        </div>
        <div class="form-group">
            <label for="desc">Description</label>
            <textarea name="desc" class="form-control" id="desc">{{course.desc}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" name="videoId" class="form-control" value="{{course.videoId}}" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" name="level" class="form-control" value="{{course.level}}" id="level">
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</div>